<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_hal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hal : "/>

    <TextView
        android:layout_toRightOf="@id/tv_hal"
        android:id="@+id/tv_rahasia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rahasia"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/tv_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palembang, 28 September 2022"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/tv_Kepada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kepada:"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_hal"
        android:layout_marginTop="32dp" />
    <Spinner
        android:id="@+id/sp_kepadasiapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Kepada"
        android:entries="@array/arr_kepada"/>

    <Button
        android:id="@+id/btn_clickhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Click Here" />
    <CheckBox
        android:id="@+id/cb_yakin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yakin"
        android:layout_below="@id/btn_clickhere" />
    <CheckBox
        android:id="@+id/cb_yakinbanget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yakin Banget"
        android:layout_below="@id/btn_clickhere"
        android:layout_toRightOf="@id/cb_yakin" />
    <CheckBox
        android:id="@+id/cb_gayakin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ga Yakin"
        android:layout_below="@id/btn_clickhere"
        android:layout_toRightOf="@id/cb_yakinbanget" />
    <Button
        android:id="@+id/btn_keluar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keluar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>